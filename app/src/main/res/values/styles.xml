<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    //没有ActionBar，背景纯白，导航栏不透明
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        <item name="redText">@color/red</item>-->
<!--        <item name="bg">@color/Background</item>-->
<!--        <item name="tittleText">@color/tittleText</item>-->
<!--        <item name="title_layout">@drawable/side_nav_bar</item>-->
<!--        <item name="no_data">@drawable/no_data</item>-->
<!--        <item name="primary_text">@color/primary_text</item>-->
<!--        <item name="second_text">@color/secondary_text</item>-->
<!--        <item name="second_bg">@color/second_bg</item>-->
    </style>

    <!--OrderTabLayout-->
    <style name="OrderTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

</resources>